<!-- views/checkout.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="UZYHOMES Checkout - Complete your purchase of quiet luxury bedding, interiors, and décor.">
    <title>Checkout — UZYHOMES</title>
    
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,300;0,400;0,500;0,600;1,300;1,400&family=Inter:wght@300;400;500&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/checkout.css">
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/images/favicon.svg">
</head>
<body class="quiet-luxury">
    <%- include('partials/header') %>

    <!-- Checkout Header -->
    <section class="checkout-header section-py" style="padding-top: 120px;">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1 class="display-5 mb-3">Checkout</h1>
                    <p class="lead">Complete your purchase</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Checkout Progress -->
    <section class="checkout-progress">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="progress-steps">
                        <div class="step active">
                            <div class="step-number">1</div>
                            <div class="step-label">Shipping</div>
                        </div>
                        <div class="step">
                            <div class="step-number">2</div>
                            <div class="step-label">Payment</div>
                        </div>
                        <div class="step">
                            <div class="step-number">3</div>
                            <div class="step-label">Review</div>
                        </div>
                        <div class="step">
                            <div class="step-number">4</div>
                            <div class="step-label">Confirmation</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Check if cart is empty - using locals for safety -->
    <% if (!locals.cart || !cart || !cart.items || cart.items.length === 0) { %>
        <section class="section-py">
            <div class="container">
                <div class="row">
                    <div class="col-12 text-center py-5">
                        <i class="fas fa-shopping-cart fa-4x text-muted mb-4"></i>
                        <h3>Your cart is empty</h3>
                        <p class="text-muted mb-4">Add some items to your cart before checking out</p>
                        <a href="/bedding" class="btn btn-dark">
                            <i class="fas fa-arrow-left me-2"></i>Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </section>
    <% } else { %>
        <!-- Checkout Content -->
        <section class="section-py">
            <div class="container">
                <form id="checkoutForm" action="/cart/checkout/process" method="POST">
                    <div class="row">
                        <div class="col-lg-8">
                            <!-- Shipping Information -->
                            <div class="checkout-section" style="background: white; border: 1px solid #e9ecef; border-radius: 12px; padding: 2rem;">
                                <h3 class="section-title mb-4">Shipping Information</h3>
                                
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="firstName" class="form-label">First Name *</label>
                                        <input type="text" class="form-control" id="firstName" name="firstName" required 
                                               value="<%= user && user.firstName ? user.firstName : '' %>">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="lastName" class="form-label">Last Name *</label>
                                        <input type="text" class="form-control" id="lastName" name="lastName" required
                                               value="<%= user && user.lastName ? user.lastName : '' %>">
                                    </div>
                                </div>
                                
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email Address *</label>
                                    <input type="email" class="form-control" id="email" name="email" required
                                           value="<%= user && user.email ? user.email : '' %>">
                                </div>
                                
                                <div class="mb-3">
                                    <label for="phone" class="form-label">Phone Number *</label>
                                    <input type="tel" class="form-control" id="phone" name="phone" required
                                           value="<%= user && user.phone ? user.phone : '' %>">
                                </div>
                                
                                <div class="mb-3">
                                    <label for="address" class="form-label">Street Address *</label>
                                    <input type="text" class="form-control" id="address" name="address" required>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="city" class="form-label">City *</label>
                                        <input type="text" class="form-control" id="city" name="city" required>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="state" class="form-label">State *</label>
                                        <select class="form-select" id="state" name="state" required>
                                            <option value="">Select State</option>
                                            <option value="Abuja">Abuja FCT</option>
                                            <option value="Lagos">Lagos</option>
                                            <option value="Rivers">Rivers</option>
                                            <option value="Oyo">Oyo</option>
                                            <option value="Kano">Kano</option>
                                            <option value="Edo">Edo</option>
                                            <option value="Delta">Delta</option>
                                            <option value="Imo">Imo</option>
                                            <option value="Kaduna">Kaduna</option>
                                            <option value="Plateau">Plateau</option>
                                        </select>
                                    </div>
                                </div>
                                
                                <div class="mb-3">
                                    <label for="zipCode" class="form-label">ZIP / Postal Code</label>
                                    <input type="text" class="form-control" id="zipCode" name="zipCode">
                                </div>
                                
                                <div class="mb-3">
                                    <label for="country" class="form-label">Country *</label>
                                    <select class="form-select" id="country" name="country" required>
                                        <option value="Nigeria" selected>Nigeria</option>
                                        <option value="Ghana">Ghana</option>
                                        <option value="United Kingdom">United Kingdom</option>
                                        <option value="United States">United States</option>
                                        <option value="Canada">Canada</option>
                                    </select>
                                </div>
                                
                                <div class="form-check mb-3">
                                    <input class="form-check-input" type="checkbox" id="saveAddress" name="saveAddress">
                                    <label class="form-check-label" for="saveAddress">
                                        Save this address for future orders
                                    </label>
                                </div>
                            </div>
                            
                            <!-- Shipping Method -->
                            <div class="checkout-section mt-5" style="background: white; border: 1px solid #e9ecef; border-radius: 12px; padding: 2rem;">
                                <h3 class="section-title mb-4">Shipping Method</h3>
                                
                                <div class="shipping-methods">
                                    <div class="shipping-method" style="padding: 1rem; border: 1px solid #dee2e6; border-radius: 8px; margin-bottom: 0.75rem;">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="shippingMethod" id="standard" value="standard" checked>
                                            <label class="form-check-label" for="standard">
                                                <div class="d-flex justify-content-between">
                                                    <div>
                                                        <h5>Standard Shipping</h5>
                                                        <p class="mb-0">5-7 business days</p>
                                                    </div>
                                                    <span class="shipping-price">₦5,000</span>
                                                </div>
                                            </label>
                                        </div>
                                    </div>
                                    
                                    <div class="shipping-method" style="padding: 1rem; border: 1px solid #dee2e6; border-radius: 8px; margin-bottom: 0.75rem;">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="shippingMethod" id="express" value="express">
                                            <label class="form-check-label" for="express">
                                                <div class="d-flex justify-content-between">
                                                    <div>
                                                        <h5>Express Shipping</h5>
                                                        <p class="mb-0">2-3 business days</p>
                                                    </div>
                                                    <span class="shipping-price">₦12,000</span>
                                                </div>
                                            </label>
                                        </div>
                                    </div>
                                    
                                    <div class="shipping-method" style="padding: 1rem; border: 1px solid #dee2e6; border-radius: 8px; margin-bottom: 0.75rem;">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="shippingMethod" id="pickup" value="pickup">
                                            <label class="form-check-label" for="pickup">
                                                <div class="d-flex justify-content-between">
                                                    <div>
                                                        <h5>Store Pickup</h5>
                                                        <p class="mb-0">Pick up from our Abuja showroom</p>
                                                    </div>
                                                    <span class="shipping-price">Free</span>
                                                </div>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Payment Method -->
                            <div class="checkout-section mt-5" style="background: white; border: 1px solid #e9ecef; border-radius: 12px; padding: 2rem;">
                                <h3 class="section-title mb-4">Payment Method</h3>
                                
                                <div class="payment-methods">
                                    <div class="payment-method" style="padding: 1rem; border: 1px solid #dee2e6; border-radius: 8px; margin-bottom: 0.75rem;">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="paymentMethod" id="card" value="card" checked>
                                            <label class="form-check-label" for="card">
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-credit-card me-3"></i>
                                                    <span>Credit/Debit Card</span>
                                                </div>
                                            </label>
                                        </div>
                                        
                                        <div class="card-details mt-3" id="cardDetails">
                                            <div class="row">
                                                <div class="col-12 mb-3">
                                                    <label for="cardNumber" class="form-label">Card Number</label>
                                                    <input type="text" class="form-control" id="cardNumber" name="cardNumber" placeholder="1234 5678 9012 3456">
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label for="cardExpiry" class="form-label">Expiry Date</label>
                                                    <input type="text" class="form-control" id="cardExpiry" name="cardExpiry" placeholder="MM/YY">
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label for="cardCVC" class="form-label">CVC</label>
                                                    <input type="text" class="form-control" id="cardCVC" name="cardCVC" placeholder="123">
                                                </div>
                                                <div class="col-12 mb-3">
                                                    <label for="cardName" class="form-label">Name on Card</label>
                                                    <input type="text" class="form-control" id="cardName" name="cardName">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="payment-method" style="padding: 1rem; border: 1px solid #dee2e6; border-radius: 8px; margin-bottom: 0.75rem;">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="paymentMethod" id="transfer" value="transfer">
                                            <label class="form-check-label" for="transfer">
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-university me-3"></i>
                                                    <span>Bank Transfer</span>
                                                </div>
                                            </label>
                                        </div>
                                        
                                        <div class="transfer-details mt-3 d-none" id="transferDetails">
                                            <p>Make payment to:</p>
                                            <div class="bank-details" style="background: #f8f9fa; padding: 1rem; border-radius: 8px;">
                                                <p><strong>Bank:</strong> Zenith Bank</p>
                                                <p><strong>Account Name:</strong> UZYHOMES LTD</p>
                                                <p><strong>Account Number:</strong> 1234567890</p>
                                            </div>
                                            <p class="small text-muted">Please use your order number as reference</p>
                                        </div>
                                    </div>
                                    
                                    <div class="payment-method" style="padding: 1rem; border: 1px solid #dee2e6; border-radius: 8px; margin-bottom: 0.75rem;">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="paymentMethod" id="paypal" value="paypal">
                                            <label class="form-check-label" for="paypal">
                                                <div class="d-flex align-items-center">
                                                    <i class="fab fa-paypal me-3"></i>
                                                    <span>PayPal</span>
                                                </div>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Review & Place Order Button -->
                            <div class="checkout-actions mt-5">
                                <div class="row">
                                    <div class="col-md-6">
                                        <a href="/cart" class="btn btn-outline-dark">
                                            <i class="fas fa-arrow-left me-2"></i>Back to Cart
                                        </a>
                                    </div>
                                    <div class="col-md-6 text-md-end">
                                        <button type="submit" class="btn btn-dark btn-lg" id="placeOrderBtn">
                                            Place Order
                                            <i class="fas fa-lock ms-2"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Order Summary -->
                        <div class="col-lg-4">
                            <div class="order-summary-sticky" style="position: sticky; top: 100px; background: #f8f9fa; border-radius: 12px; padding: 1.5rem;">
                                <h3 class="summary-title" style="font-size: 1.25rem; font-weight: 500; margin-bottom: 1.5rem; padding-bottom: 1rem; border-bottom: 1px solid #dee2e6;">Order Summary</h3>
                                
                                <div class="order-items" id="orderItems" style="margin-bottom: 1.5rem; max-height: 300px; overflow-y: auto;">
                                    <% if (cart && cart.items && cart.items.length > 0) { %>
                                        <% cart.items.forEach(item => { %>
                                            <% 
                                                const product = item.product || {}; 
                                                const price = (product.discountPrice || product.price || 0);
                                                const itemTotal = price * (item.quantity || 1);
                                                const productName = product.name || 'Product';
                                            %>
                                            <div class="order-item" style="margin-bottom: 1rem; padding-bottom: 1rem; border-bottom: 1px solid #dee2e6;">
                                                <div class="d-flex justify-content-between">
                                                    <div>
                                                        <p class="item-name" style="font-weight: 500; margin-bottom: 0.25rem;"><%= productName %> × <%= item.quantity || 1 %></p>
                                                        <% if (product.specifications) { %>
                                                            <small class="text-muted">
                                                                <% if (product.specifications.size) { %>Size: <%= product.specifications.size %><% } %>
                                                                <% if (product.specifications.color) { %><%= product.specifications.size ? ', ' : '' %>Color: <%= product.specifications.color %><% } %>
                                                            </small>
                                                        <% } %>
                                                    </div>
                                                    <span class="fw-bold">₦<%= Number(itemTotal).toLocaleString() %></span>
                                                </div>
                                            </div>
                                        <% }) %>
                                    <% } %>
                                </div>
                                
                                <div class="summary-details">
                                    <% 
                                        const subtotal = cart && cart.subtotal ? cart.subtotal : 0;
                                        const shipping = cart && cart.shippingCost ? cart.shippingCost : 2500;
                                        const discount = cart && cart.couponDiscount ? cart.couponDiscount : 0;
                                        const total = cart && cart.total ? cart.total : (subtotal + shipping - discount);
                                        const itemCount = cart && cart.items ? cart.items.reduce((sum, item) => sum + (item.quantity || 0), 0) : 0;
                                    %>
                                    <div class="summary-row" style="display: flex; justify-content: space-between; margin-bottom: 0.75rem;">
                                        <span>Subtotal (<span id="itemCount"><%= itemCount %></span> items)</span>
                                        <span id="subtotal">₦<%= Number(subtotal).toLocaleString() %></span>
                                    </div>
                                    <div class="summary-row" style="display: flex; justify-content: space-between; margin-bottom: 0.75rem;">
                                        <span>Shipping</span>
                                        <span id="shippingCost">₦<%= Number(shipping).toLocaleString() %></span>
                                    </div>
                                    <% if (discount > 0) { %>
                                        <div class="summary-row" style="display: flex; justify-content: space-between; margin-bottom: 0.75rem;">
                                            <span>Discount (<%= cart.couponCode || 'Coupon' %>)</span>
                                            <span class="text-success">-₦<%= Number(discount).toLocaleString() %></span>
                                        </div>
                                    <% } %>
                                    <div class="summary-row total" style="display: flex; justify-content: space-between; font-size: 1.2rem; font-weight: 600; margin-top: 1rem; padding-top: 1rem; border-top: 1px solid #dee2e6;">
                                        <span>Total</span>
                                        <span class="total-amount" id="total">₦<%= Number(total).toLocaleString() %></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Hidden inputs for cart data -->
                    <input type="hidden" name="cartSubtotal" value="<%= cart && cart.subtotal ? cart.subtotal : 0 %>">
                    <input type="hidden" name="cartTotal" value="<%= cart && cart.total ? cart.total : 0 %>">
                    <input type="hidden" name="couponCode" value="<%= cart && cart.couponCode ? cart.couponCode : '' %>">
                    <input type="hidden" name="couponDiscount" value="<%= cart && cart.couponDiscount ? cart.couponDiscount : 0 %>">
                </form>
            </div>
        </section>
    <% } %>

    <%- include('partials/footer') %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JS -->
    <script src="/js/auth.js"></script>
    <script src="/js/cart.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Toggle payment method details
            const paymentRadios = document.querySelectorAll('input[name="paymentMethod"]');
            const cardDetails = document.getElementById('cardDetails');
            const transferDetails = document.getElementById('transferDetails');
            
            if (paymentRadios.length > 0) {
                paymentRadios.forEach(radio => {
                    radio.addEventListener('change', function() {
                        if (this.value === 'card') {
                            if (cardDetails) cardDetails.classList.remove('d-none');
                            if (transferDetails) transferDetails.classList.add('d-none');
                        } else if (this.value === 'transfer') {
                            if (cardDetails) cardDetails.classList.add('d-none');
                            if (transferDetails) transferDetails.classList.remove('d-none');
                        } else {
                            if (cardDetails) cardDetails.classList.add('d-none');
                            if (transferDetails) transferDetails.classList.add('d-none');
                        }
                    });
                });
            }
            
            // Update shipping cost when method changes
            const shippingRadios = document.querySelectorAll('input[name="shippingMethod"]');
            const subtotal = <%= cart && cart.subtotal ? cart.subtotal : 0 %>;
            const discount = <%= cart && cart.couponDiscount ? cart.couponDiscount : 0 %>;
            
            if (shippingRadios.length > 0) {
                shippingRadios.forEach(radio => {
                    radio.addEventListener('change', function() {
                        let shippingCost = 0;
                        if (this.value === 'standard') shippingCost = 5000;
                        else if (this.value === 'express') shippingCost = 12000;
                        else if (this.value === 'pickup') shippingCost = 0;
                        
                        const shippingElement = document.getElementById('shippingCost');
                        if (shippingElement) {
                            shippingElement.textContent = `₦${shippingCost.toLocaleString()}`;
                        }
                        
                        // Update total
                        const total = subtotal + shippingCost - discount;
                        const totalElement = document.getElementById('total');
                        if (totalElement) {
                            totalElement.textContent = `₦${total.toLocaleString()}`;
                        }
                    });
                });
            }
        });
    </script>
</body>
</html>