<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details â€” UZYHOMES</title>
    
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@300;400;500;600&family=Inter:wght@300;400;500&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    
    <style>
        /* Order Details Page Styles */
        .order-details-section {
            padding: 120px 0 80px;
            background: #faf9f7;
            min-height: 100vh;
        }

        .order-container {
            max-width: 1000px;
            margin: 0 auto;
        }

        /* Header Card */
        .order-header-card {
            background: white;
            border: 1px solid rgba(0, 0, 0, 0.05);
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.02);
        }

        .order-title {
            font-family: 'Playfair Display', serif;
            font-size: 2rem;
            font-weight: 400;
            color: #1a1a1a;
            margin-bottom: 10px;
        }

        .order-meta {
            display: flex;
            flex-wrap: wrap;
            gap: 30px;
            margin-top: 20px;
        }

        .meta-item {
            flex: 1;
            min-width: 200px;
        }

        .meta-label {
            font-size: 0.8rem;
            color: #6c757d;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 5px;
        }

        .meta-value {
            font-size: 1.1rem;
            color: #1a1a1a;
            font-weight: 500;
        }

        .meta-value.total {
            font-size: 1.3rem;
            color: #b8a48c;
        }

        /* Status Badges */
        .status-badge {
            display: inline-block;
            padding: 6px 16px;
            font-size: 0.85rem;
            font-weight: 400;
            letter-spacing: 0.5px;
            border: 1px solid transparent;
        }

        .status-pending {
            background: #fff3e0;
            color: #b85e00;
            border-color: #ffe4cc;
        }

        .status-confirmed {
            background: #e3f2fd;
            color: #0d47a1;
            border-color: #bbdefb;
        }

        .status-processing {
            background: #e8f5e9;
            color: #1b5e20;
            border-color: #c8e6c9;
        }

        .status-shipped {
            background: #e0f2f1;
            color: #004d40;
            border-color: #b2dfdb;
        }

        .status-delivered {
            background: #e8f5e9;
            color: #1b5e20;
            border-color: #a5d6a7;
        }

        .status-cancelled {
            background: #ffebee;
            color: #b71c1c;
            border-color: #ffcdd2;
        }

        .status-refunded {
            background: #e0f2f1;
            color: #006064;
            border-color: #b2ebf2;
        }

        /* Cards */
        .order-card {
            background: white;
            border: 1px solid rgba(0, 0, 0, 0.05);
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.02);
        }

        .card-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.2rem;
            font-weight: 400;
            color: #1a1a1a;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }

        /* Items Table */
        .items-table {
            width: 100%;
            border-collapse: collapse;
        }

        .items-table th {
            text-align: left;
            padding: 12px 0;
            font-size: 0.8rem;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            color: #6c757d;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }

        .items-table td {
            padding: 20px 0;
            border-bottom: 1px solid rgba(0, 0, 0, 0.03);
        }

        .product-info {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .product-image {
            width: 70px;
            height: 70px;
            object-fit: cover;
            border: 1px solid rgba(0, 0, 0, 0.05);
        }

        .product-details h4 {
            font-size: 1rem;
            font-weight: 500;
            color: #1a1a1a;
            margin-bottom: 5px;
        }

        .product-details p {
            font-size: 0.85rem;
            color: #6c757d;
            margin: 0;
        }

        .product-price {
            font-weight: 500;
            color: #b8a48c;
        }

        /* Address Grid */
        .address-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
        }

        .address-box {
            padding: 20px;
            background: #faf9f7;
            border: 1px solid rgba(0, 0, 0, 0.05);
        }

        .address-box h4 {
            font-size: 1rem;
            font-weight: 500;
            color: #1a1a1a;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }

        .address-text {
            font-size: 0.95rem;
            color: #4a4a4a;
            line-height: 1.6;
            margin-bottom: 5px;
        }

        /* Timeline */
        .timeline {
            position: relative;
            padding-left: 30px;
        }

        .timeline::before {
            content: '';
            position: absolute;
            left: 8px;
            top: 10px;
            bottom: 10px;
            width: 2px;
            background: rgba(184, 164, 140, 0.2);
        }

        .timeline-item {
            position: relative;
            margin-bottom: 25px;
        }

        .timeline-item::before {
            content: '';
            position: absolute;
            left: -30px;
            top: 5px;
            width: 16px;
            height: 16px;
            border-radius: 50%;
            background: white;
            border: 2px solid #b8a48c;
            z-index: 1;
        }

        .timeline-item.completed::before {
            background: #b8a48c;
        }

        .timeline-date {
            font-size: 0.8rem;
            color: #6c757d;
            margin-bottom: 3px;
        }

        .timeline-status {
            font-size: 1rem;
            font-weight: 500;
            color: #1a1a1a;
            margin-bottom: 3px;
        }

        .timeline-note {
            font-size: 0.9rem;
            color: #6c757d;
        }

        /* Summary */
        .summary-row {
            display: flex;
            justify-content: space-between;
            padding: 12px 0;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }

        .summary-row.total {
            border-bottom: none;
            padding-top: 15px;
            font-size: 1.2rem;
            font-weight: 500;
            color: #b8a48c;
        }

        .summary-label {
            color: #6c757d;
        }

        .summary-value {
            font-weight: 500;
            color: #1a1a1a;
        }

        /* Action Buttons */
        .action-buttons {
            display: flex;
            gap: 15px;
            margin-top: 30px;
            flex-wrap: wrap;
        }

        .btn {
            padding: 12px 30px;
            font-size: 0.9rem;
            font-weight: 400;
            letter-spacing: 0.5px;
            border: none;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-primary {
            background: #1a1a1a;
            color: white;
        }

        .btn-primary:hover {
            background: #333;
            transform: translateY(-1px);
        }

        .btn-outline {
            background: transparent;
            border: 1px solid #1a1a1a;
            color: #1a1a1a;
        }

        .btn-outline:hover {
            background: #1a1a1a;
            color: white;
        }

        .btn-outline:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        /* Loading State */
        .loading-state {
            text-align: center;
            padding: 100px 20px;
        }

        .spinner {
            width: 50px;
            height: 50px;
            border: 3px solid rgba(184, 164, 140, 0.1);
            border-top-color: #b8a48c;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 0 auto 20px;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }

        /* Error State */
        .error-state {
            text-align: center;
            padding: 100px 20px;
        }

        .error-icon {
            font-size: 4rem;
            color: #b8a48c;
            margin-bottom: 20px;
            opacity: 0.5;
        }

        .error-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            color: #1a1a1a;
            margin-bottom: 10px;
        }

        .error-text {
            color: #6c757d;
            margin-bottom: 30px;
        }

        @media (max-width: 768px) {
            .order-details-section {
                padding: 100px 0 60px;
            }

            .order-header-card {
                padding: 20px;
            }

            .order-meta {
                flex-direction: column;
                gap: 15px;
            }

            .address-grid {
                grid-template-columns: 1fr;
                gap: 20px;
            }

            .product-info {
                flex-direction: column;
                align-items: flex-start;
                text-align: center;
            }

            .product-image {
                margin: 0 auto;
            }

            .action-buttons {
                flex-direction: column;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
</head>
<body>

    <%- include('partials/header') %>

    <section class="order-details-section">
        <div class="container">
            <div class="order-container">
                <!-- Loading State -->
                <div id="loadingState" class="loading-state">
                    <div class="spinner"></div>
                    <p>Loading order details...</p>
                </div>

                <!-- Error State -->
                <div id="errorState" class="error-state" style="display: none;">
                    <div class="error-icon">
                        <i class="fas fa-exclamation-circle"></i>
                    </div>
                    <h2 class="error-title">Order Not Found</h2>
                    <p class="error-text">The order you're looking for doesn't exist or you don't have permission to view it.</p>
                    <a href="/account" class="btn btn-primary">
                        <i class="fas fa-arrow-left"></i> Back to Account
                    </a>
                </div>

                <!-- Order Content -->
                <div id="orderContent" style="display: none;">
                    <!-- Header Card -->
                    <div class="order-header-card">
                        <h1 class="order-title">Order <span id="orderNumber"></span></h1>
                        
                        <div class="order-meta">
                            <div class="meta-item">
                                <div class="meta-label">Order Date</div>
                                <div class="meta-value" id="orderDate"></div>
                            </div>
                            <div class="meta-item">
                                <div class="meta-label">Status</div>
                                <div class="meta-value">
                                    <span class="status-badge" id="orderStatus"></span>
                                </div>
                            </div>
                            <div class="meta-item">
                                <div class="meta-label">Payment Status</div>
                                <div class="meta-value">
                                    <span class="status-badge" id="paymentStatus"></span>
                                </div>
                            </div>
                            <div class="meta-item">
                                <div class="meta-label">Total Amount</div>
                                <div class="meta-value total" id="orderTotal"></div>
                            </div>
                        </div>
                    </div>

                    <!-- Items Card -->
                    <div class="order-card">
                        <h3 class="card-title">Order Items</h3>
                        <div class="table-responsive">
                            <table class="items-table">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody id="orderItems">
                                    <!-- Items will be inserted here -->
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Addresses -->
                    <div class="address-grid">
                        <div class="address-box">
                            <h4>Shipping Address</h4>
                            <div id="shippingAddress"></div>
                        </div>
                        <div class="address-box">
                            <h4>Billing Address</h4>
                            <div id="billingAddress"></div>
                        </div>
                    </div>

                    <!-- Order Summary & Timeline -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="order-card">
                                <h3 class="card-title">Order Summary</h3>
                                <div class="summary">
                                    <div class="summary-row">
                                        <span class="summary-label">Subtotal</span>
                                        <span class="summary-value" id="subtotal"></span>
                                    </div>
                                    <div class="summary-row">
                                        <span class="summary-label">Shipping</span>
                                        <span class="summary-value" id="shipping"></span>
                                    </div>
                                    <div class="summary-row">
                                        <span class="summary-label">Tax</span>
                                        <span class="summary-value" id="tax"></span>
                                    </div>
                                    <div class="summary-row">
                                        <span class="summary-label">Discount</span>
                                        <span class="summary-value" id="discount"></span>
                                    </div>
                                    <div class="summary-row total">
                                        <span class="summary-label">Total</span>
                                        <span class="summary-value" id="finalTotal"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="order-card">
                                <h3 class="card-title">Order Timeline</h3>
                                <div class="timeline" id="orderTimeline">
                                    <!-- Timeline items will be inserted here -->
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="action-buttons">
                        <a href="/account" class="btn btn-outline">
                            <i class="fas fa-arrow-left"></i> Back to Account
                        </a>
                        <button class="btn btn-primary" id="trackOrderBtn" style="display: none;">
                            <i class="fas fa-truck"></i> Track Order
                        </button>
                        <button class="btn btn-outline" id="cancelOrderBtn" style="display: none;">
                            <i class="fas fa-times"></i> Cancel Order
                        </button>
                        <button class="btn btn-primary" id="retryPaymentBtn" style="display: none;">
                            <i class="fas fa-credit-card"></i> Retry Payment
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JS -->
    <script src="/js/auth.js"></script>
    
    <script>
        // Get order ID from URL
        const orderId = window.location.pathname.split('/').pop();
        
        // API Helper
        const API = {
            token: localStorage.getItem('token'),
            
            headers() {
                return {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json',
                    ...(this.token ? { 'Authorization': `Bearer ${this.token}` } : {})
                };
            },
            
            async request(method, url) {
                try {
                    const res = await fetch(url, {
                        method,
                        headers: this.headers(),
                        credentials: 'include'
                    });
                    
                    if (res.status === 401) {
                        window.location.href = '/login?redirect=' + encodeURIComponent(window.location.pathname);
                        return null;
                    }
                    
                    return await res.json();
                } catch (error) {
                    console.error('API Error:', error);
                    return null;
                }
            },
            
            get: (url) => API.request('GET', url)
        };

        // Load order details
        async function loadOrderDetails() {
            try {
                const data = await API.get(`/api/orders/${orderId}`);
                
                if (!data || !data.success) {
                    showError();
                    return;
                }

                const order = data.order || data;
                displayOrder(order);
                
            } catch (error) {
                console.error('Error loading order:', error);
                showError();
            }
        }

        function displayOrder(order) {
            // Hide loading, show content
            document.getElementById('loadingState').style.display = 'none';
            document.getElementById('orderContent').style.display = 'block';

            // Format dates
            const orderDate = new Date(order.createdAt).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            });

            // Basic info
            document.getElementById('orderNumber').textContent = `#${order.orderNumber || order._id.slice(-8).toUpperCase()}`;
            document.getElementById('orderDate').textContent = orderDate;
            document.getElementById('orderTotal').textContent = `â‚¦${Number(order.total).toLocaleString()}`;

            // Status badges
            const statusBadge = document.getElementById('orderStatus');
            statusBadge.textContent = (order.orderStatus || 'pending').toUpperCase();
            statusBadge.className = `status-badge status-${order.orderStatus || 'pending'}`;

            const paymentBadge = document.getElementById('paymentStatus');
            paymentBadge.textContent = (order.paymentStatus || 'pending').toUpperCase();
            paymentBadge.className = `status-badge status-${order.paymentStatus === 'completed' ? 'delivered' : order.paymentStatus || 'pending'}`;

            // Items
            const itemsHtml = (order.items || []).map(item => `
                <tr>
                    <td>
                        <div class="product-info">
                            <img src="${item.product?.images?.[0]?.url || '/images/placeholder.jpg'}" 
                                 alt="${item.product?.name}" 
                                 class="product-image">
                            <div class="product-details">
                                <h4>${item.product?.name || 'Product'}</h4>
                                <p>SKU: ${item.product?.sku || 'N/A'}</p>
                            </div>
                        </div>
                    </td>
                    <td class="product-price">â‚¦${Number(item.price).toLocaleString()}</td>
                    <td>${item.quantity}</td>
                    <td class="product-price">â‚¦${Number(item.price * item.quantity).toLocaleString()}</td>
                </tr>
            `).join('');
            document.getElementById('orderItems').innerHTML = itemsHtml;

            // Addresses
            if (order.shippingAddress) {
                document.getElementById('shippingAddress').innerHTML = `
                    <p class="address-text">${order.shippingAddress.street || ''}</p>
                    <p class="address-text">${order.shippingAddress.city || ''}, ${order.shippingAddress.state || ''} ${order.shippingAddress.zipCode || ''}</p>
                    <p class="address-text">${order.shippingAddress.country || 'Nigeria'}</p>
                    <p class="address-text">ðŸ“ž ${order.shippingAddress.phone || ''}</p>
                `;
            }

            if (order.billingAddress) {
                document.getElementById('billingAddress').innerHTML = `
                    <p class="address-text">${order.billingAddress.street || ''}</p>
                    <p class="address-text">${order.billingAddress.city || ''}, ${order.billingAddress.state || ''} ${order.billingAddress.zipCode || ''}</p>
                    <p class="address-text">${order.billingAddress.country || 'Nigeria'}</p>
                    ${order.billingAddress.phone ? `<p class="address-text">ðŸ“ž ${order.billingAddress.phone}</p>` : ''}
                `;
            } else {
                document.getElementById('billingAddress').innerHTML = '<p class="address-text">Same as shipping address</p>';
            }

            // Summary
            document.getElementById('subtotal').textContent = `â‚¦${Number(order.subtotal || 0).toLocaleString()}`;
            document.getElementById('shipping').textContent = order.shippingCost ? `â‚¦${Number(order.shippingCost).toLocaleString()}` : 'Free';
            document.getElementById('tax').textContent = `â‚¦${Number(order.tax || 0).toLocaleString()}`;
            document.getElementById('discount').textContent = order.discount ? `-â‚¦${Number(order.discount).toLocaleString()}` : 'â‚¦0';
            document.getElementById('finalTotal').textContent = `â‚¦${Number(order.total).toLocaleString()}`;

            // Timeline
            const timelineHtml = (order.statusHistory || [
                { status: order.orderStatus || 'pending', timestamp: order.createdAt, note: 'Order placed' }
            ]).map(entry => `
                <div class="timeline-item completed">
                    <div class="timeline-date">${new Date(entry.timestamp).toLocaleString()}</div>
                    <div class="timeline-status">${(entry.status || 'pending').toUpperCase()}</div>
                    <div class="timeline-note">${entry.note || ''}</div>
                </div>
            `).join('');
            document.getElementById('orderTimeline').innerHTML = timelineHtml;

            // Action buttons based on status
            const cancelBtn = document.getElementById('cancelOrderBtn');
            const retryBtn = document.getElementById('retryPaymentBtn');
            const trackBtn = document.getElementById('trackOrderBtn');

            if (order.orderStatus === 'pending' && order.paymentStatus !== 'completed') {
                retryBtn.style.display = 'inline-flex';
                retryBtn.onclick = () => retryPayment(order._id);
            }

            if (['pending', 'confirmed'].includes(order.orderStatus) && order.paymentStatus !== 'completed') {
                cancelBtn.style.display = 'inline-flex';
                cancelBtn.onclick = () => cancelOrder(order._id);
            }

            if (order.orderStatus === 'shipped' && order.trackingNumber) {
                trackBtn.style.display = 'inline-flex';
                trackBtn.onclick = () => trackOrder(order.trackingNumber);
            }
        }

        function showError() {
            document.getElementById('loadingState').style.display = 'none';
            document.getElementById('errorState').style.display = 'block';
        }

        async function cancelOrder(id) {
            if (!confirm('Are you sure you want to cancel this order?')) return;
            
            try {
                const res = await fetch(`/api/orders/${id}/cancel`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${localStorage.getItem('token')}`
                    }
                });
                
                const data = await res.json();
                
                if (data.success) {
                    alert('Order cancelled successfully');
                    window.location.reload();
                } else {
                    alert(data.message || 'Failed to cancel order');
                }
            } catch (error) {
                console.error('Cancel error:', error);
                alert('Failed to cancel order');
            }
        }

        async function retryPayment(id) {
            try {
                const res = await fetch('/api/payments/retry/' + id, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${localStorage.getItem('token')}`
                    }
                });
                
                const data = await res.json();
                
                if (data.success && data.data.authorizationUrl) {
                    window.location.href = data.data.authorizationUrl;
                } else {
                    alert('Failed to initiate payment');
                }
            } catch (error) {
                console.error('Retry error:', error);
                alert('Failed to retry payment');
            }
        }

        function trackOrder(trackingNumber) {
            // Implement tracking logic - could open tracking page or modal
            window.open(`https://tracking.service?number=${trackingNumber}`, '_blank');
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            // Check if user is logged in
            if (!localStorage.getItem('token')) {
                window.location.href = '/login?redirect=' + encodeURIComponent(window.location.pathname);
                return;
            }
            
            loadOrderDetails();
        });
    </script>
</body>
</html>