<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Failed â€” UZYHOMES</title>
    
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@300;400;500;600&family=Inter:wght@300;400;500&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <style>
        body {
            background: #f8f9fa;
        }
        .failed-container {
            min-height: 80vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }
        .failed-card {
            background: white;
            border-radius: 16px;
            padding: 3rem;
            text-align: center;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            max-width: 500px;
            width: 100%;
        }
        .failed-icon {
            font-size: 5rem;
            color: #dc3545;
            margin-bottom: 1.5rem;
        }
        .failed-title {
            font-size: 2rem;
            font-weight: 500;
            margin-bottom: 1rem;
            color: #1a1a1a;
        }
        .failed-message {
            color: #6c757d;
            margin-bottom: 2rem;
            font-size: 1.1rem;
        }
        .error-details {
            background: #f8f9fa;
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            text-align: left;
            color: #dc3545;
            border-left: 4px solid #dc3545;
        }
        .btn-container {
            display: flex;
            gap: 1rem;
            justify-content: center;
        }
        .btn {
            padding: 0.75rem 2rem;
            border-radius: 30px;
            font-weight: 500;
        }
        .btn-dark {
            background: #1a1a1a;
            border: none;
        }
        .btn-dark:hover {
            background: #333;
        }
        .btn-outline-dark {
            border: 1px solid #1a1a1a;
            color: #1a1a1a;
        }
        .btn-outline-dark:hover {
            background: #1a1a1a;
            color: white;
        }
        .support-text {
            margin-top: 2rem;
            font-size: 0.9rem;
            color: #6c757d;
        }
        .support-text a {
            color: #1a1a1a;
            text-decoration: none;
            font-weight: 500;
        }
        .support-text a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>
    
    <section class="failed-container">
        <div class="failed-card">
            <div class="failed-icon">
                <i class="fas fa-times-circle"></i>
            </div>
            <h1 class="failed-title">Payment Failed</h1>
            <p class="failed-message">We couldn't process your payment. Please try again.</p>
            
            <div class="error-details" id="errorDetails">
                <strong>Reason:</strong> <span id="errorMessage">Transaction could not be completed</span>
            </div>
            
            <div class="btn-container">
                <a href="/cart" class="btn btn-dark">Return to Cart</a>
                <a href="/bedding" class="btn btn-outline-dark">Continue Shopping</a>
            </div>
            
            <div class="support-text">
                Need help? <a href="/contact">Contact Support</a>
            </div>
        </div>
    </section>
    
    <%- include('partials/footer') %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const urlParams = new URLSearchParams(window.location.search);
            const error = urlParams.get('error');
            const orderId = urlParams.get('order');
            
            if (error) {
                document.getElementById('errorMessage').textContent = decodeURIComponent(error);
            }
            
            if (orderId) {
                console.log('Failed payment for order:', orderId);
            }
        });
    </script>
</body>
</html>