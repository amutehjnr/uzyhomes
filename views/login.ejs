<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="UZYHOMES Login - Access your account to manage orders, save favorites, and track your quiet luxury purchases.">
    <title>Login â€” UZYHOMES</title>
    
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,300;0,400;0,500;0,600;1,300;1,400&family=Inter:wght@300;400;500&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/auth.css">
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/images/favicon.svg">
</head>
<body class="quiet-luxury">
    <%- include('partials/header') %>

    <!-- Auth Hero -->
    <section class="auth-hero section-py">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <h1 class="display-4 mb-4">Welcome Back</h1>
                    <p class="lead">
                        Access your account to manage orders, save favorites, and track your quiet luxury purchases.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Login Form -->
    <section class="section-py">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="auth-card">
                        <h2 class="auth-title mb-4">Sign In to Your Account</h2>
                        
                        <form id="loginForm">
                            <div class="mb-4">
                                <label for="loginEmail" class="form-label">Email Address *</label>
                                <input type="email" class="form-control" id="loginEmail" required>
                            </div>
                            
                            <div class="mb-4">
                                <label for="loginPassword" class="form-label">Password *</label>
                                <div class="password-input">
                                    <input type="password" class="form-control" id="loginPassword" required>
                                    <button type="button" class="password-toggle">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                            </div>
                            
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="rememberMe">
                                    <label class="form-check-label" for="rememberMe">
                                        Remember me
                                    </label>
                                </div>
                                <a href="/forgot-password" class="forgot-link">Forgot password?</a>
                            </div>
                            
                            <button type="submit" class="btn btn-dark btn-lg w-100 mb-4">
                                Sign In
                            </button>
                            
                            <div class="auth-divider">
                                <span>Or continue with</span>
                            </div>
                            
                            <div class="social-login mb-4">
                                <button type="button" class="btn btn-outline-dark w-100 mb-3">
                                    <i class="fab fa-google me-3"></i>Continue with Google
                                </button>
                                <button type="button" class="btn btn-outline-dark w-100">
                                    <i class="fab fa-facebook-f me-3"></i>Continue with Facebook
                                </button>
                            </div>
                            
                            <div class="text-center">
                                <p class="mb-0">
                                    Don't have an account? 
                                    <a href="/register" class="auth-link">Create one</a>
                                </p>
                            </div>
                        </form>
                    </div>
                    
                    <!-- Benefits -->
                    <div class="auth-benefits mt-5">
                        <h4 class="mb-3">Account Benefits</h4>
                        <ul class="benefits-list">
                            <li>
                                <i class="fas fa-check-circle me-2"></i>
                                <span>Track your orders and delivery</span>
                            </li>
                            <li>
                                <i class="fas fa-check-circle me-2"></i>
                                <span>Save your favorite items</span>
                            </li>
                            <li>
                                <i class="fas fa-check-circle me-2"></i>
                                <span>Exclusive member discounts</span>
                            </li>
                            <li>
                                <i class="fas fa-check-circle me-2"></i>
                                <span>Faster checkout process</span>
                            </li>
                            <li>
                                <i class="fas fa-check-circle me-2"></i>
                                <span>Personalized recommendations</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Newsletter -->
    <section class="section-py bg-light">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 text-center">
                    <h3 class="section-title mb-4">Stay Inspired</h3>
                    <p class="lead mb-4">
                        Subscribe to our newsletter for design insights, new collections, 
                        and quiet luxury living tips.
                    </p>
                    
                    <form class="newsletter-form">
                        <div class="input-group mb-3">
                            <input type="email" class="form-control" placeholder="Your email address" required>
                            <button class="btn btn-dark" type="submit">Subscribe</button>
                        </div>
                        <small class="text-muted">We respect your privacy. Unsubscribe at any time.</small>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JS -->
    <script src="/js/auth.js"></script>
</body>
</html>