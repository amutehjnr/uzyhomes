    <style>
        /* UZYHOMES - Quiet Luxury CSS */
        :root {
            --color-ivory: #FAF9F7;
            --color-stone: #F5F3F0;
            --color-sand: #E8E4DD;
            --color-charcoal: #2D2D2D;
            --color-grey: #777777;
            --color-clay: #A68A6F;
            --color-linen: #D9D1C7;
            --font-serif: 'Playfair Display', Georgia, serif;
            --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            --shadow-subtle: 0 4px 20px rgba(0, 0, 0, 0.05);
            --shadow-soft: 0 10px 40px rgba(0, 0, 0, 0.08);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-sans);
            font-weight: 300;
            color: var(--color-charcoal);
            background-color: var(--color-ivory);
            line-height: 1.6;
        }

        /* Navigation - Simplified for static page */
        .navbar {
            padding: 1.5rem 0;
            background-color: rgba(250, 249, 247, 0.95);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }

        .navbar-brand {
            font-family: var(--font-serif);
            font-size: 1.8rem;
            color: var(--color-charcoal);
            text-decoration: none;
        }

        .nav-link {
            color: var(--color-charcoal);
            font-weight: 300;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-size: 0.9rem;
        }

        .nav-link:hover {
            color: var(--color-clay);
        }

        /* Page Header */
        .page-header {
            background-color: var(--color-stone);
            padding: 4rem 0;
            text-align: center;
            margin-bottom: 3rem;
        }

        .page-header h1 {
            font-family: var(--font-serif);
            font-size: 2.5rem;
            font-weight: 300;
            color: var(--color-charcoal);
            margin-bottom: 1rem;
        }

        .page-header .breadcrumb {
            background: transparent;
            justify-content: center;
            margin-bottom: 0;
        }

        .page-header .breadcrumb-item,
        .page-header .breadcrumb-item a {
            color: var(--color-grey);
            text-decoration: none;
            font-size: 0.9rem;
            letter-spacing: 1px;
        }

        .page-header .breadcrumb-item.active {
            color: var(--color-charcoal);
        }

        .page-header .breadcrumb-item a:hover {
            color: var(--color-clay);
        }

        /* Collection Description */
        .collection-description {
            text-align: center;
            max-width: 800px;
            margin: 0 auto 3rem;
            padding: 0 1rem;
        }

        .collection-description h2 {
            font-family: var(--font-serif);
            font-size: 2rem;
            font-weight: 300;
            margin-bottom: 1.5rem;
            color: var(--color-charcoal);
        }

        .collection-description p {
            color: var(--color-grey);
            font-size: 1.1rem;
            line-height: 1.8;
        }

        .collection-description .divider {
            width: 60px;
            height: 1px;
            background-color: var(--color-clay);
            margin: 2rem auto;
        }

        /* Product Cards - Enhanced for product page */
        .product-card {
            background: white;
            transition: var(--transition);
            margin-bottom: 2rem;
            box-shadow: var(--shadow-subtle);
        }

        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: var(--shadow-soft);
        }

        .product-image {
            position: relative;
            overflow: hidden;
            height: 400px;
        }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.6s ease;
        }

        .product-card:hover .product-image img {
            transform: scale(1.05);
        }

        .product-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.3);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: var(--transition);
        }

        .product-card:hover .product-overlay {
            opacity: 1;
        }

        .product-overlay .btn {
            padding: 0.8rem 2rem;
            letter-spacing: 1px;
            border: 1px solid white;
            color: white;
            background: transparent;
            text-decoration: none;
            font-size: 0.9rem;
            text-transform: uppercase;
            transition: var(--transition);
        }

        .product-overlay .btn:hover {
            background-color: white;
            color: var(--color-charcoal);
        }

        .product-info {
            padding: 1.5rem;
            text-align: center;
        }

        .product-info h3 {
            font-family: var(--font-serif);
            font-size: 1.3rem;
            margin-bottom: 0.5rem;
            font-weight: 400;
        }

        .product-price {
            font-family: var(--font-sans);
            font-size: 1rem;
            color: var(--color-grey);
            letter-spacing: 1px;
        }

        .product-badge {
            position: absolute;
            top: 1rem;
            left: 1rem;
            background-color: var(--color-clay);
            color: white;
            padding: 0.3rem 0.8rem;
            font-size: 0.8rem;
            letter-spacing: 1px;
            text-transform: uppercase;
            z-index: 2;
        }

        /* Features Section */
        .features-section {
            background-color: var(--color-stone);
            padding: 4rem 0;
            margin-top: 3rem;
        }

        .feature-item {
            text-align: center;
            padding: 2rem;
        }

        .feature-icon {
            font-size: 2rem;
            color: var(--color-clay);
            margin-bottom: 1rem;
        }

        .feature-item h4 {
            font-family: var(--font-serif);
            font-size: 1.2rem;
            margin-bottom: 0.5rem;
            font-weight: 400;
        }

        .feature-item p {
            color: var(--color-grey);
            font-size: 0.9rem;
            margin-bottom: 0;
        }

        /* Footer */
        .footer {
            background-color: #f3eaea;
            color: var(--color-grey);
            padding: 4rem 0 2rem;
            margin-top: 4rem;
        }

        .footer h5 {
            color: rgb(12, 12, 12);
            font-size: 1rem;
            letter-spacing: 1px;
            margin-bottom: 1.5rem;
            text-transform: uppercase;
        }

        .footer-links {
            list-style: none;
            padding: 0;
        }

        .footer-links li {
            margin-bottom: 0.8rem;
        }

        .footer-links a {
            color: #999;
            text-decoration: none;
            font-size: 0.9rem;
            transition: var(--transition);
        }

        .footer-links a:hover {
            color: var(--color-charcoal);
            padding-left: 5px;
        }

        .copyright {
            color: #777;
            font-size: 0.9rem;
            text-align: center;
            margin-top: 3rem;
            padding-top: 2rem;
            border-top: 1px solid rgba(0, 0, 0, 0.1);
        }

        /* Responsive */
        @media (max-width: 768px) {
            .page-header {
