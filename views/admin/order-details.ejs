    <script>
        // Get order ID from URL
        const orderId = window.location.pathname.split('/').pop();
        
        // API Helper
        const API = {
            token: localStorage.getItem('adminToken'),
            
            headers() {
                return {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json',
                    ...(this.token ? { 'Authorization': `Bearer ${this.token}` } : {})
                };
            },
            
            async request(method, url, data = null) {
                const options = { 
                    method, 
                    headers: this.headers(),
                    credentials: 'include'
                };
                
                if (data) options.body = JSON.stringify(data);
                
                try {
                    const res = await fetch(url, options);
                    
                    if (res.status === 401) {
                        window.location.href = '/admin/login';
                        return null;
                    }
                    
                    return await res.json();
                } catch (error) {
                    console.error('API Error:', error);
                    return null;
                }
            },
            
            get: (url) => API.request('GET', url),
            put: (url, data) => API.request('PUT', url, data)
        };

        // Load order details
        async function loadOrderDetails() {
            try {
                const data = await API.get(`/admin/api/orders/${orderId}`);
                
                if (!data || !data.success) {
                    showError();
                    return;
                }

                const order = data.order;
                displayOrder(order);
                
            } catch (error) {
                console.error('Error loading order:', error);
                showError();
            }
        }

        function displayOrder(order) {
            // Hide loading, show content
            document.getElementById('loadingState').style.display = 'none';
            document.getElementById('orderContent').style.display = 'block';

            // Format dates
            const orderDate = new Date(order.createdAt).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });

            // Basic info
            document.getElementById('orderNumber').textContent = `#${order.orderNumber || order._id.slice(-8).toUpperCase()}`;
            document.getElementById('orderDate').textContent = `Placed on ${orderDate}`;
            document.getElementById('orderTotal').textContent = `‚Ç¶${Number(order.total).toLocaleString()}`;
            document.getElementById('paymentMethod').textContent = order.paymentMethod || 'Card';

            // Status badges
            const orderStatus = document.getElementById('orderStatus');
            orderStatus.textContent = (order.orderStatus || 'pending').toUpperCase();
            orderStatus.className = `status-badge status-${order.orderStatus || 'pending'}`;

            const paymentStatus = document.getElementById('paymentStatus');
            paymentStatus.textContent = (order.paymentStatus || 'pending').toUpperCase();
            paymentStatus.className = `status-badge ${order.paymentStatus === 'completed' ? 'badge-completed' : 'badge-' + (order.paymentStatus || 'pending')}`;

            // Set status select
            document.getElementById('statusSelect').value = order.orderStatus || 'pending';

            // Customer info
            if (order.customer) {
                document.getElementById('customerName').textContent = `${order.customer.firstName || ''} ${order.customer.lastName || ''}`.trim() || 'N/A';
                document.getElementById('customerEmail').textContent = order.customer.email || 'N/A';
                document.getElementById('customerPhone').textContent = order.customer.phone || 'N/A';
                document.getElementById('customerInitials').textContent = (order.customer.firstName?.[0] || 'U') + (order.customer.lastName?.[0] || '');
                document.getElementById('customerEmailLink').href = `mailto:${order.customer.email}`;
            }

            // Addresses
            if (order.shippingAddress) {
                document.getElementById('shippingAddress').innerHTML = `
                    <p class="address-text"><strong>${order.shippingAddress.firstName || ''} ${order.shippingAddress.lastName || ''}</strong></p>
                    <p class="address-text">${order.shippingAddress.street || ''}</p>
                    <p class="address-text">${order.shippingAddress.city || ''}, ${order.shippingAddress.state || ''} ${order.shippingAddress.zipCode || ''}</p>
                    <p class="address-text">${order.shippingAddress.country || 'Nigeria'}</p>
                    <p class="address-text">üìû ${order.shippingAddress.phone || ''}</p>
                    <p class="address-text">‚úâÔ∏è ${order.shippingAddress.email || ''}</p>
                `;
            }

            if (order.billingAddress) {
                document.getElementById('billingAddress').innerHTML = `
                    <p class="address-text"><strong>${order.billingAddress.firstName || ''} ${order.billingAddress.lastName || ''}</strong></p>
                    <p class="address-text">${order.billingAddress.street || ''}</p>
                    <p class="address-text">${order.billingAddress.city || ''}, ${order.billingAddress.state || ''} ${order.billingAddress.zipCode || ''}</p>
                    <p class="address-text">${order.billingAddress.country || 'Nigeria'}</p>
                `;
            }

            // Order items
            const itemsHtml = (order.items || []).map(item => `
                <tr>
                    <td>
                        <div class="product-info">
                            <img src="${item.product?.images?.[0]?.url || '/images/placeholder.jpg'}" 
                                 alt="${item.product?.name}" 
                                 class="product-image">
                            <div class="product-details">
                                <h6>${item.product?.name || 'Product'}</h6>
                                <span class="sku">SKU: ${item.product?.sku || 'N/A'}</span>
                            </div>
                        </div>
                    </td>
                    <td>${item.product?.sku || 'N/A'}</td>
                    <td>‚Ç¶${Number(item.price).toLocaleString()}</td>
                    <td>${item.quantity}</td>
                    <td>‚Ç¶${Number(item.price * item.quantity).toLocaleString()}</td>
                </tr>
            `).join('');
            document.getElementById('orderItems').innerHTML = itemsHtml;

            // Summary
            document.getElementById('subtotal').textContent = `‚Ç¶${Number(order.subtotal || 0).toLocaleString()}`;
            document.getElementById('shipping').textContent = order.shippingCost ? `‚Ç¶${Number(order.shippingCost).toLocaleString()}` : 'Free';
            document.getElementById('tax').textContent = `‚Ç¶${Number(order.tax || 0).toLocaleString()}`;
            document.getElementById('discount').textContent = order.discount ? `-‚Ç¶${Number(order.discount).toLocaleString()}` : '‚Ç¶0';
            document.getElementById('finalTotal').textContent = `‚Ç¶${Number(order.total).toLocaleString()}`;

            // Timeline
            const timelineHtml = (order.statusHistory || []).map((entry, index) => `
                <div class="timeline-item completed">
                    <div class="timeline-date">${new Date(entry.timestamp).toLocaleString()}</div>
                    <div class="timeline-status">${(entry.status || 'pending').toUpperCase()}</div>
                    <div class="timeline-note">${entry.note || ''}</div>
                </div>
            `).join('');
            document.getElementById('orderTimeline').innerHTML = timelineHtml || '<p class="text-muted">No status history available</p>';

            // Tracking
            if (order.trackingNumber) {
                document.getElementById('trackingDisplay').style.display = 'block';
                document.getElementById('currentTracking').textContent = order.trackingNumber;
                document.getElementById('currentProvider').textContent = order.shippingProvider || 'N/A';
                document.getElementById('trackingNumber').value = order.trackingNumber;
                document.getElementById('shippingProvider').value = order.shippingProvider || '';
            }

            // Payment info
            if (order.paymentDetails) {
                document.getElementById('paymentReference').textContent = order.paymentDetails.reference || 'N/A';
                document.getElementById('transactionId').textContent = order.paymentDetails.transactionId || order.paymentDetails.paystackTransactionId || 'N/A';
                document.getElementById('paidAt').textContent = order.paymentDetails.paidAt ? new Date(order.paymentDetails.paidAt).toLocaleString() : 'N/A';
                document.getElementById('paymentChannel').textContent = order.paymentDetails.channel || 'N/A';
                
                if (order.paymentDetails.authorization) {
                    document.getElementById('cardDetails').style.display = 'block';
                    document.getElementById('cardBrand').textContent = order.paymentDetails.authorization.brand || 'N/A';
                    document.getElementById('cardLast4').textContent = order.paymentDetails.authorization.last4 || 'N/A';
                    document.getElementById('cardBank').textContent = order.paymentDetails.authorization.bank || 'N/A';
                    document.getElementById('cardCountry').textContent = order.paymentDetails.authorization.country_code || 'N/A';
                }

                // View transaction link
                if (order.paymentDetails.transactionId) {
                    document.getElementById('viewTransactionLink').href = `/admin/transactions/${order.paymentDetails.transactionId}`;
                }
            }
        }

        function showError() {
            document.getElementById('loadingState').style.display = 'none';
            document.getElementById('errorState').style.display = 'block';
        }

        async function updateOrderStatus() {
            const newStatus = document.getElementById('statusSelect').value;
            const note = prompt('Add a note for this status change (optional):');
            
            const data = await API.put(`/admin/orders/${orderId}/status`, {
                status: newStatus,
                note: note || `Status updated to ${newStatus}`
            });
            
            if (data && data.success) {
                alert('Order status updated successfully!');
                loadOrderDetails(); // Reload the page data
            } else {
                alert('Failed to update order status');
            }
        }

        async function updateTracking() {
            const trackingNumber = document.getElementById('trackingNumber').value;
            const shippingProvider = document.getElementById('shippingProvider').value;
            
            if (!trackingNumber) {
                alert('Please enter a tracking number');
                return;
            }
            
            const data = await API.put(`/admin/orders/${orderId}/status`, {
                status: 'shipped',
                trackingNumber,
                shippingProvider,
                note: `Order shipped with ${shippingProvider || 'carrier'}. Tracking: ${trackingNumber}`
            });
            
            if (data && data.success) {
                alert('Tracking information updated!');
                loadOrderDetails();
            } else {
                alert('Failed to update tracking');
            }
        }

        function refreshTimeline() {
            loadOrderDetails();
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', loadOrderDetails);
    </script>
</body>
</html>