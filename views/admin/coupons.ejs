<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Coupons ‚Äî UZYHOMES Admin</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body data-page="coupons">

<!-- FIXED: Pass both currentPage and user to sidebar -->
<%- include('./partials/sidebar', { currentPage: 'coupons', user: user }) %>

<div class="admin-main">
  <!-- FIXED: Pass user to header instead of admin -->
  <%- include('./partials/header', { pageTitle: 'Coupons', user: user }) %>

  <div class="admin-content">

    <div class="page-header">
      <div>
        <h1 class="page-title">Coupons</h1>
        <p class="page-subtitle">Create and manage discount codes</p>
      </div>
      <div class="page-actions">
        <button class="btn btn-secondary" onclick="Coupons.loadTable()"><i class="fas fa-sync-alt"></i> Refresh</button>
        <button class="btn btn-primary" onclick="Coupons.openCreate()"><i class="fas fa-plus"></i> Create Coupon</button>
      </div>
    </div>

    <!-- Stats -->
    <div class="stat-grid">
      <div class="stat-card">
        <div class="stat-icon gold"><i class="fas fa-ticket-alt"></i></div>
        <div class="stat-body">
          <div class="stat-label">Total Coupons</div>
          <div class="stat-value"><%= stats && stats.total ? stats.total.toLocaleString() : '0' %></div>
        </div>
      </div>
      <div class="stat-card">
        <div class="stat-icon green"><i class="fas fa-check-circle"></i></div>
        <div class="stat-body">
          <div class="stat-label">Active</div>
          <div class="stat-value"><%= stats && stats.active ? stats.active.toLocaleString() : '0' %></div>
        </div>
      </div>
      <div class="stat-card">
        <div class="stat-icon red"><i class="fas fa-calendar-times"></i></div>
        <div class="stat-body">
          <div class="stat-label">Expired</div>
          <div class="stat-value"><%= stats && stats.expired ? stats.expired.toLocaleString() : '0' %></div>
        </div>
      </div>
      <div class="stat-card">
        <div class="stat-icon blue"><i class="fas fa-tags"></i></div>
        <div class="stat-body">
          <div class="stat-label">Total Redeemed</div>
          <div class="stat-value"><%= stats && stats.totalUsage ? stats.totalUsage.toLocaleString() : '0' %></div>
        </div>
      </div>
    </div>

    <!-- Filters -->
    <div class="filter-bar">
      <div class="search-input-wrap">
        <i class="fas fa-search"></i>
        <input type="text" id="couponSearch" class="form-control" placeholder="Search coupon code..." data-search-for="coupons">
      </div>
      <select id="couponStatus" class="form-control" data-filter-for="coupons">
        <option value="">All Status</option>
        <option value="active">Active</option>
        <option value="inactive">Inactive</option>
      </select>
    </div>

    <!-- Table -->
    <div class="card">
      <div class="table-wrapper">
        <table class="admin-table">
          <thead>
            <tr>
              <th>Code</th>
              <th>Discount</th>
              <th>Expires</th>
              <th>Usage</th>
              <th>Status</th>
              <th>Min. Order</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="couponsTableBody">
            <tr><td colspan="7" class="text-center" style="padding:40px"><div class="spinner"></div></td></tr>
          </tbody>
        </table>
      </div>
      <div class="pagination-wrap" id="paginationWrap"></div>
    </div>

  </div>
</div>

<!-- Coupon Modal -->
<div class="modal-overlay" id="couponModal">
  <div class="modal">
    <div class="modal-header">
      <h2 class="modal-title" id="couponModalTitle">Create Coupon</h2>
      <button class="modal-close" onclick="Modal.close('couponModal')"><i class="fas fa-times"></i></button>
    </div>
    <div class="modal-body">
      <form id="couponForm" onsubmit="event.preventDefault(); Coupons.save();">
        <div class="form-row">
          <div class="form-group">
            <label class="form-label">Coupon Code <span style="color:var(--red)">*</span></label>
            <div style="display:flex;gap:8px">
              <input type="text" name="code" id="couponCode" class="form-control" placeholder="e.g. UZYHOLIDAY20" style="text-transform:uppercase" required>
              <button type="button" class="btn btn-secondary" onclick="Coupons.generateCode()" title="Auto Generate">
                <i class="fas fa-random"></i>
              </button>
            </div>
          </div>
          <div class="form-group">
            <label class="form-label">Discount Type <span style="color:var(--red)">*</span></label>
            <select name="discountType" id="discountType" class="form-control" required>
              <option value="percentage">Percentage (%)</option>
              <option value="fixed">Fixed Amount (‚Ç¶)</option>
            </select>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group">
            <label class="form-label">Discount Value <span style="color:var(--red)">*</span></label>
            <input type="number" name="discountValue" id="discountValue" class="form-control" placeholder="e.g. 20" min="0" step="0.01" required>
          </div>
          <div class="form-group">
            <label class="form-label">Minimum Order Amount (‚Ç¶)</label>
            <input type="number" name="minPurchaseAmount" id="minPurchaseAmount" class="form-control" placeholder="0" min="0" value="0">
          </div>
        </div>
        <div class="form-row">
          <div class="form-group">
            <label class="form-label">Usage Limit</label>
            <input type="number" name="usageLimit" id="usageLimit" class="form-control" placeholder="Unlimited if empty" min="1">
          </div>
          <div class="form-group">
            <label class="form-label">Expiry Date <span style="color:var(--red)">*</span></label>
            <input type="date" name="validUntil" id="validUntil" class="form-control" required>
          </div>
        </div>
        <div class="form-group">
          <label class="form-check">
            <input type="checkbox" name="isActive" id="isActive" checked>
            <span>Coupon is active</span>
          </label>
        </div>
      </form>
    </div>
    <div class="modal-footer">
      <button class="btn btn-ghost" onclick="Modal.close('couponModal')">Cancel</button>
      <button class="btn btn-primary" onclick="Coupons.save()"><i class="fas fa-save"></i> Save Coupon</button>
    </div>
  </div>
</div>

<!-- Delete Modal -->
<div class="modal-overlay" id="deleteModal">
  <div class="modal" style="max-width:420px">
    <div class="modal-header">
      <h2 class="modal-title" id="deleteModalTitle">Delete Coupon</h2>
      <button class="modal-close" onclick="Modal.close('deleteModal')"><i class="fas fa-times"></i></button>
    </div>
    <div class="modal-body" style="text-align:center;padding:32px">
      <div style="font-size:2.5rem;margin-bottom:16px">üóëÔ∏è</div>
      <p style="color:var(--text-secondary);margin-bottom:8px">Delete coupon:</p>
      <p class="fw-600 coupon-code" id="deleteTargetName" style="margin-bottom:16px"></p>
      <p style="font-size:0.85rem;color:var(--text-muted)">This action cannot be undone.</p>
    </div>
    <div class="modal-footer">
      <button class="btn btn-ghost" onclick="Modal.close('deleteModal')">Cancel</button>
      <button class="btn btn-danger" onclick="confirmDeleteAction()"><i class="fas fa-trash"></i> Delete</button>
    </div>
  </div>
</div>

<div id="toastContainer" class="toast-container"></div>
<script src="/js/admin.js"></script>
<script>
// Initialize on page load
document.addEventListener('DOMContentLoaded', function() {
  if (typeof Coupons !== 'undefined' && Coupons.loadTable) {
    Coupons.loadTable();
  }
});
</script>
</body>
</html>