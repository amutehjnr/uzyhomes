<aside class="admin-sidebar" id="adminSidebar">
    <div class="sidebar-header">
        <div class="sidebar-brand">UZYHOMES <span>Admin</span></div>
    </div>
    
    <% if (user) { %>
    <div class="sidebar-user">
        <div class="sidebar-avatar">
            <%= (user.firstName || 'A').charAt(0).toUpperCase() %>
        </div>
        <div class="sidebar-user-info">
            <div class="sidebar-user-name">
                <%= user.firstName || '' %> <%= user.lastName || '' %>
            </div>
            <div class="sidebar-user-role">
                <%= user.role === 'super_admin' ? 'Super Admin' : 'Administrator' %>
            </div>
        </div>
    </div>
    <% } %>
    
    <nav class="sidebar-nav">
        <div class="nav-section-label">Main</div>
        <div class="nav-item">
            <a href="/admin/dashboard" class="nav-link <%= (typeof currentPage !== 'undefined' && currentPage === 'dashboard') ? 'active' : '' %>">
                <span class="nav-icon"><i class="fas fa-home"></i></span>
                <span>Dashboard</span>
            </a>
        </div>
        <div class="nav-item">
            <a href="/admin/products" class="nav-link <%= (typeof currentPage !== 'undefined' && currentPage === 'products') ? 'active' : '' %>">
                <span class="nav-icon"><i class="fas fa-box"></i></span>
                <span>Products</span>
            </a>
        </div>
        <div class="nav-item">
            <a href="/admin/orders" class="nav-link <%= (typeof currentPage !== 'undefined' && currentPage === 'orders') ? 'active' : '' %>">
                <span class="nav-icon"><i class="fas fa-shopping-cart"></i></span>
                <span>Orders</span>
                <span class="nav-badge">12</span>
            </a>
        </div>
        <div class="nav-item">
            <a href="/admin/users" class="nav-link <%= (typeof currentPage !== 'undefined' && currentPage === 'users') ? 'active' : '' %>">
                <span class="nav-icon"><i class="fas fa-users"></i></span>
                <span>Users</span>
            </a>
        </div>
        
        <div class="nav-section-label">Management</div>
        <div class="nav-item">
            <a href="/admin/transactions" class="nav-link <%= (typeof currentPage !== 'undefined' && currentPage === 'transactions') ? 'active' : '' %>">
                <span class="nav-icon"><i class="fas fa-credit-card"></i></span>
                <span>Transactions</span>
            </a>
        </div>
        <div class="nav-item">
            <a href="/admin/coupons" class="nav-link <%= (typeof currentPage !== 'undefined' && currentPage === 'coupons') ? 'active' : '' %>">
                <span class="nav-icon"><i class="fas fa-ticket-alt"></i></span>
                <span>Coupons</span>
            </a>
        </div>
        
        <div class="nav-section-label">Communications</div>
        <div class="nav-item">
            <a href="/admin/contacts" class="nav-link <%= (typeof currentPage !== 'undefined' && currentPage === 'contacts') ? 'active' : '' %>">
                <span class="nav-icon"><i class="fas fa-envelope"></i></span>
                <span>Contact Messages</span>
                <span class="nav-badge" id="unreadMessages">0</span>
            </a>
        </div>
        <div class="nav-item">
            <a href="/admin/subscribers" class="nav-link <%= (typeof currentPage !== 'undefined' && currentPage === 'subscribers') ? 'active' : '' %>">
                <span class="nav-icon"><i class="fas fa-newspaper"></i></span>
                <span>Newsletter</span>
                <span class="nav-badge" id="activeSubscribers">0</span>
            </a>
        </div>

        <div class="nav-item">
            <a href="/admin/blog" class="nav-link <%= (typeof currentPage !== 'undefined' && currentPage === 'blog') ? 'active' : '' %>">
                <span class="nav-icon"><i class="fas fa-newspaper"></i></span>
                <span>Blog Posts</span>
                <span class="nav-badge" id="blogPostsCount">0</span>
            </a>
        </div>
        
        <div class="nav-section-label">System</div>
        <div class="nav-item">
            <a href="/admin/settings" class="nav-link <%= (typeof currentPage !== 'undefined' && currentPage === 'settings') ? 'active' : '' %>">
                <span class="nav-icon"><i class="fas fa-cog"></i></span>
                <span>Settings</span>
            </a>
        </div>
    </nav>
    
    <div class="sidebar-footer">
        <div class="sidebar-version">v1.0.0</div>
    </div>
</aside>

<div class="sidebar-overlay" id="sidebarOverlay"></div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const sidebar = document.getElementById('adminSidebar');
    const overlay = document.getElementById('sidebarOverlay');
    const toggle = document.getElementById('sidebarToggle');
    
    if (toggle && sidebar && overlay) {
        toggle.addEventListener('click', function() {
            sidebar.classList.toggle('open');
            overlay.classList.toggle('open');
        });
        
        overlay.addEventListener('click', function() {
            sidebar.classList.remove('open');
            overlay.classList.remove('open');
        });
    }
    
    // Load counts for badges
    loadMessageCounts();
});

async function loadMessageCounts() {
    try {
        // Get unread messages count
        const msgRes = await fetch('/admin/api/contacts/count?status=new', {
            headers: {
                'Authorization': `Bearer ${localStorage.getItem('adminToken')}`
            }
        });
        const msgData = await msgRes.json();
        if (msgData.success) {
            const badge = document.getElementById('unreadMessages');
            if (badge) {
                badge.textContent = msgData.count || 0;
                badge.style.display = msgData.count > 0 ? 'inline-block' : 'none';
            }
        }
        
        // Get active subscribers count
        const subRes = await fetch('/admin/api/subscribers/count?status=active', {
            headers: {
                'Authorization': `Bearer ${localStorage.getItem('adminToken')}`
            }
        });
        const subData = await subRes.json();
        if (subData.success) {
            const badge = document.getElementById('activeSubscribers');
            if (badge) {
                badge.textContent = subData.count || 0;
            }
        }
    } catch (error) {
        console.error('Error loading counts:', error);
    }
}
</script>