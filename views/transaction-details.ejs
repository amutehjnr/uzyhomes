<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transaction Details — UZYHOMES</title>
    
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@300;400;500;600&family=Inter:wght@300;400;500&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    
    <style>
        /* Transaction Details Page Styles */
        .transaction-details-section {
            padding: 120px 0 80px;
            background: #faf9f7;
            min-height: 100vh;
        }

        .transaction-container {
            max-width: 900px;
            margin: 0 auto;
        }

        /* Header Card */
        .transaction-header-card {
            background: white;
            border: 1px solid rgba(0, 0, 0, 0.05);
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.02);
        }

        .transaction-title {
            font-family: 'Playfair Display', serif;
            font-size: 2rem;
            font-weight: 400;
            color: #1a1a1a;
            margin-bottom: 10px;
        }

        .transaction-meta {
            display: flex;
            flex-wrap: wrap;
            gap: 30px;
            margin-top: 20px;
        }

        .meta-item {
            flex: 1;
            min-width: 200px;
        }

        .meta-label {
            font-size: 0.8rem;
            color: #6c757d;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 5px;
        }

        .meta-value {
            font-size: 1.1rem;
            color: #1a1a1a;
            font-weight: 500;
        }

        .meta-value.amount {
            font-size: 1.3rem;
            color: #b8a48c;
        }

        /* Status Badges */
        .status-badge {
            display: inline-block;
            padding: 6px 16px;
            font-size: 0.85rem;
            font-weight: 400;
            letter-spacing: 0.5px;
            border: 1px solid transparent;
        }

        .status-success, .status-completed {
            background: #e8f5e9;
            color: #1b5e20;
            border-color: #a5d6a7;
        }

        .status-pending {
            background: #fff3e0;
            color: #b85e00;
            border-color: #ffe4cc;
        }

        .status-failed {
            background: #ffebee;
            color: #b71c1c;
            border-color: #ffcdd2;
        }

        .status-refunded {
            background: #e0f2f1;
            color: #006064;
            border-color: #b2ebf2;
        }

        /* Cards */
        .transaction-card {
            background: white;
            border: 1px solid rgba(0, 0, 0, 0.05);
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.02);
        }

        .card-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.2rem;
            font-weight: 400;
            color: #1a1a1a;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }

        /* Info Grid */
        .info-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
        }

        .info-item {
            padding: 15px;
            background: #faf9f7;
            border: 1px solid rgba(0, 0, 0, 0.03);
        }

        .info-label {
            font-size: 0.8rem;
            color: #6c757d;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 8px;
        }

        .info-value {
            font-size: 1rem;
            color: #1a1a1a;
            font-weight: 500;
            word-break: break-all;
        }

        .info-value small {
            font-size: 0.85rem;
            color: #6c757d;
            font-weight: 400;
        }

        /* Payment Details */
        .payment-detail-row {
            display: flex;
            justify-content: space-between;
            padding: 12px 0;
            border-bottom: 1px solid rgba(0, 0, 0, 0.03);
        }

        .payment-detail-row:last-child {
            border-bottom: none;
        }

        .detail-label {
            color: #6c757d;
            font-size: 0.95rem;
        }

        .detail-value {
            font-weight: 500;
            color: #1a1a1a;
            text-align: right;
        }

        .detail-value .badge {
            display: inline-block;
            padding: 4px 12px;
            font-size: 0.75rem;
            font-weight: 400;
        }

        /* Order Link */
        .order-link {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            color: #1a1a1a;
            text-decoration: none;
            padding: 10px 20px;
            background: #faf9f7;
            border: 1px solid rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
        }

        .order-link:hover {
            background: #1a1a1a;
            color: white;
            text-decoration: none;
        }

        .order-link i {
            color: #b8a48c;
        }

        .order-link:hover i {
            color: white;
        }

        /* Action Buttons */
        .action-buttons {
            display: flex;
            gap: 15px;
            margin-top: 20px;
            flex-wrap: wrap;
        }

        .btn {
            padding: 12px 30px;
            font-size: 0.9rem;
            font-weight: 400;
            letter-spacing: 0.5px;
            border: none;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-primary {
            background: #1a1a1a;
            color: white;
        }

        .btn-primary:hover {
            background: #333;
            transform: translateY(-1px);
        }

        .btn-outline {
            background: transparent;
            border: 1px solid #1a1a1a;
            color: #1a1a1a;
        }

        .btn-outline:hover {
            background: #1a1a1a;
            color: white;
        }

        /* Receipt */
        .receipt-box {
            background: #faf9f7;
            padding: 20px;
            font-family: monospace;
            font-size: 0.9rem;
            border: 1px dashed rgba(0, 0, 0, 0.1);
        }

        .receipt-line {
            display: flex;
            justify-content: space-between;
            padding: 5px 0;
        }

        /* Loading State */
        .loading-state {
            text-align: center;
            padding: 100px 20px;
        }

        .spinner {
            width: 50px;
            height: 50px;
            border: 3px solid rgba(184, 164, 140, 0.1);
            border-top-color: #b8a48c;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 0 auto 20px;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }

        /* Error State */
        .error-state {
            text-align: center;
            padding: 100px 20px;
        }

        .error-icon {
            font-size: 4rem;
            color: #b8a48c;
            margin-bottom: 20px;
            opacity: 0.5;
        }

        .error-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            color: #1a1a1a;
            margin-bottom: 10px;
        }

        .error-text {
            color: #6c757d;
            margin-bottom: 30px;
        }

        @media (max-width: 768px) {
            .transaction-details-section {
                padding: 100px 0 60px;
            }

            .transaction-header-card {
                padding: 20px;
            }

            .transaction-meta {
                flex-direction: column;
                gap: 15px;
            }

            .info-grid {
                grid-template-columns: 1fr;
            }

            .action-buttons {
                flex-direction: column;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
</head>
<body>

    <%- include('partials/header') %>

    <section class="transaction-details-section">
        <div class="container">
            <div class="transaction-container">
                <!-- Loading State -->
                <div id="loadingState" class="loading-state">
                    <div class="spinner"></div>
                    <p>Loading transaction details...</p>
                </div>

                <!-- Error State -->
                <div id="errorState" class="error-state" style="display: none;">
                    <div class="error-icon">
                        <i class="fas fa-exclamation-circle"></i>
                    </div>
                    <h2 class="error-title">Transaction Not Found</h2>
                    <p class="error-text">The transaction you're looking for doesn't exist or you don't have permission to view it.</p>
                    <a href="/account" class="btn btn-primary">
                        <i class="fas fa-arrow-left"></i> Back to Account
                    </a>
                </div>

                <!-- Transaction Content -->
                <div id="transactionContent" style="display: none;">
                    <!-- Header Card -->
                    <div class="transaction-header-card">
                        <h1 class="transaction-title">Transaction Details</h1>
                        
                        <div class="transaction-meta">
                            <div class="meta-item">
                                <div class="meta-label">Reference</div>
                                <div class="meta-value" id="transactionReference"></div>
                            </div>
                            <div class="meta-item">
                                <div class="meta-label">Date</div>
                                <div class="meta-value" id="transactionDate"></div>
                            </div>
                            <div class="meta-item">
                                <div class="meta-label">Status</div>
                                <div class="meta-value">
                                    <span class="status-badge" id="transactionStatus"></span>
                                </div>
                            </div>
                            <div class="meta-item">
                                <div class="meta-label">Amount</div>
                                <div class="meta-value amount" id="transactionAmount"></div>
                            </div>
                        </div>
                    </div>

                    <!-- Payment Information -->
                    <div class="transaction-card">
                        <h3 class="card-title">Payment Information</h3>
                        
                        <div class="info-grid">
                            <div class="info-item">
                                <div class="info-label">Payment Method</div>
                                <div class="info-value" id="paymentMethod"></div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Provider</div>
                                <div class="info-value" id="paymentProvider"></div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Transaction ID</div>
                                <div class="info-value" id="transactionId"></div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Currency</div>
                                <div class="info-value" id="transactionCurrency">NGN</div>
                            </div>
                        </div>
                    </div>

                    <!-- Payment Details -->
                    <div class="transaction-card">
                        <h3 class="card-title">Payment Details</h3>
                        
                        <div class="payment-details" id="paymentDetails">
                            <!-- Will be filled by JavaScript -->
                        </div>

                        <!-- Associated Order -->
                        <div class="mt-4 pt-3 border-top" id="orderSection" style="display: none;">
                            <h4 style="font-size: 1rem; margin-bottom: 15px;">Associated Order</h4>
                            <a href="#" id="orderLink" class="order-link">
                                <i class="fas fa-shopping-bag"></i>
                                <span id="orderNumber"></span>
                                <i class="fas fa-arrow-right ms-auto"></i>
                            </a>
                        </div>
                    </div>

                    <!-- Raw Response (Debug/Admin) -->
                    <div class="transaction-card" id="rawResponseSection" style="display: none;">
                        <h3 class="card-title">Gateway Response</h3>
                        <div class="receipt-box" id="rawResponse">
                            <!-- Will be filled by JavaScript -->
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="action-buttons">
                        <a href="/account" class="btn btn-outline">
                            <i class="fas fa-arrow-left"></i> Back to Account
                        </a>
                        <button class="btn btn-primary" id="downloadReceiptBtn" onclick="downloadReceipt()">
                            <i class="fas fa-download"></i> Download Receipt
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JS -->
    <script src="/js/auth.js"></script>
    
    <script>
        // Get transaction ID from URL
        const transactionId = window.location.pathname.split('/').pop();
        
        // API Helper
        const API = {
            token: localStorage.getItem('token'),
            
            headers() {
                return {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json',
                    ...(this.token ? { 'Authorization': `Bearer ${this.token}` } : {})
                };
            },
            
            async get(url) {
                try {
                    const res = await fetch(url, {
                        method: 'GET',
                        headers: this.headers(),
                        credentials: 'include'
                    });
                    
                    if (res.status === 401) {
                        window.location.href = '/login?redirect=' + encodeURIComponent(window.location.pathname);
                        return null;
                    }
                    
                    return await res.json();
                } catch (error) {
                    console.error('API Error:', error);
                    return null;
                }
            }
        };

        // Load transaction details
        async function loadTransactionDetails() {
            try {
                const data = await API.get(`/api/payments/${transactionId}`);
                
                if (!data || !data.success) {
                    showError();
                    return;
                }

                const transaction = data.payment || data.transaction || data;
                displayTransaction(transaction);
                
            } catch (error) {
                console.error('Error loading transaction:', error);
                showError();
            }
        }

        function displayTransaction(t) {
            // Hide loading, show content
            document.getElementById('loadingState').style.display = 'none';
            document.getElementById('transactionContent').style.display = 'block';

            // Format date
            const transactionDate = new Date(t.createdAt).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });

            // Basic info
            document.getElementById('transactionReference').textContent = t.reference || t._id.slice(-10).toUpperCase();
            document.getElementById('transactionDate').textContent = transactionDate;
            document.getElementById('transactionAmount').textContent = `₦${Number(t.amount).toLocaleString()}`;

            // Status badge
            const statusBadge = document.getElementById('transactionStatus');
            statusBadge.textContent = (t.status || 'pending').toUpperCase();
            statusBadge.className = `status-badge status-${t.status || 'pending'}`;

            // Payment info
            document.getElementById('paymentMethod').textContent = t.paymentMethod || t.provider || 'Card';
            document.getElementById('paymentProvider').textContent = t.provider || 'Paystack';
            document.getElementById('transactionId').textContent = t.transactionId || t._id;
            document.getElementById('transactionCurrency').textContent = t.currency || 'NGN';

            // Payment details
            const paymentDetails = document.getElementById('paymentDetails');
            let detailsHtml = '';

            if (t.paymentDetails) {
                const pd = t.paymentDetails;
                
                if (pd.authorization) {
                    detailsHtml += `
                        <div class="payment-detail-row">
                            <span class="detail-label">Card Type</span>
                            <span class="detail-value">${pd.authorization.card_type || 'N/A'}</span>
                        </div>
                        <div class="payment-detail-row">
                            <span class="detail-label">Card Number</span>
                            <span class="detail-value">**** **** **** ${pd.authorization.last4 || 'N/A'}</span>
                        </div>
                        <div class="payment-detail-row">
                            <span class="detail-label">Bank</span>
                            <span class="detail-value">${pd.authorization.bank || 'N/A'}</span>
                        </div>
                        <div class="payment-detail-row">
                            <span class="detail-label">Country</span>
                            <span class="detail-value">${pd.authorization.country_code || 'N/A'}</span>
                        </div>
                    `;
                }
                
                if (pd.channel) {
                    detailsHtml += `
                        <div class="payment-detail-row">
                            <span class="detail-label">Channel</span>
                            <span class="detail-value">${pd.channel}</span>
                        </div>
                    `;
                }
                
                if (pd.paidAt) {
                    detailsHtml += `
                        <div class="payment-detail-row">
                            <span class="detail-label">Paid At</span>
                            <span class="detail-value">${new Date(pd.paidAt).toLocaleString()}</span>
                        </div>
                    `;
                }
            }

            if (t.metadata) {
                detailsHtml += `
                    <div class="payment-detail-row">
                        <span class="detail-label">Order Number</span>
                        <span class="detail-value">${t.metadata.orderNumber || 'N/A'}</span>
                    </div>
                `;
            }

            paymentDetails.innerHTML = detailsHtml || '<p class="text-muted">No additional payment details available</p>';

            // Associated order
            if (t.order) {
                const orderSection = document.getElementById('orderSection');
                const orderLink = document.getElementById('orderLink');
                const orderNumber = document.getElementById('orderNumber');
                
                orderSection.style.display = 'block';
                
                if (typeof t.order === 'object') {
                    orderLink.href = `/orders/${t.order._id}`;
                    orderNumber.textContent = `#${t.order.orderNumber || t.order._id.slice(-8).toUpperCase()}`;
                } else {
                    orderLink.href = `/orders/${t.order}`;
                    orderNumber.textContent = `#${t.order.slice(-8).toUpperCase()}`;
                }
            }

            // Raw response (for debugging - hide in production)
            if (t.response || t.paymentDetails) {
                const rawResponse = document.getElementById('rawResponse');
                const responseData = t.response || t.paymentDetails;
                rawResponse.innerHTML = `<pre style="margin:0; font-size:0.8rem;">${JSON.stringify(responseData, null, 2)}</pre>`;
                // Uncomment to show raw response:
                // document.getElementById('rawResponseSection').style.display = 'block';
            }
        }

        function showError() {
            document.getElementById('loadingState').style.display = 'none';
            document.getElementById('errorState').style.display = 'block';
        }

        function downloadReceipt() {
            // Generate a simple receipt
            const reference = document.getElementById('transactionReference').textContent;
            const amount = document.getElementById('transactionAmount').textContent;
            const date = document.getElementById('transactionDate').textContent;
            const status = document.getElementById('transactionStatus').textContent;
            
            const receipt = `
UZYHOMES - Payment Receipt
================================
Reference: ${reference}
Date: ${date}
Amount: ${amount}
Status: ${status}
================================
Thank you for shopping with UZYHOMES
            `;
            
            const blob = new Blob([receipt], { type: 'text/plain' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `receipt-${reference}.txt`;
            a.click();
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            // Check if user is logged in
            if (!localStorage.getItem('token')) {
                window.location.href = '/login?redirect=' + encodeURIComponent(window.location.pathname);
                return;
            }
            
            loadTransactionDetails();
        });
    </script>
</body>
</html>