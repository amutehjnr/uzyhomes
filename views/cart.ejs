<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="UZYHOMES Shopping Cart - Your selected quiet luxury bedding, interiors, and décor items.">
    <title>Shopping Cart — UZYHOMES</title>
    
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,300;0,400;0,500;0,600;1,300;1,400&family=Inter:wght@300;400;500&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/cart.css">
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/images/favicon.svg">
</head>
<body class="quiet-luxury">
    <%- include('partials/header') %>

    <!-- Cart Header -->
    <section class="cart-header section-py">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1 class="display-5 mb-3">Your Shopping Cart</h1>
                    <p class="lead">Review your selected quiet luxury pieces</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Cart Content -->
    <section class="section-py">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <!-- Cart Items -->
                    <div class="cart-items">
                        <!-- Item 1 -->
                        <div class="cart-item">
                            <div class="row align-items-center">
                                <div class="col-md-2">
                                    <div class="cart-item-image">
                                        <img src="/images/products/serenity-bed.jpg" alt="Serenity Bed Set" class="img-fluid">
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="cart-item-details">
                                        <h3 class="cart-item-title">Serenity Bed Set</h3>
                                        <p class="cart-item-collection">Nature Collection</p>
                                        <div class="cart-item-options">
                                            <span>Size: King</span>
                                            <span>Color: Earth Taupe</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="cart-item-quantity">
                                        <div class="quantity-control">
                                            <button class="quantity-btn" data-action="decrease">-</button>
                                            <input type="number" class="quantity-input" value="1" min="1" max="10">
                                            <button class="quantity-btn" data-action="increase">+</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="cart-item-price">
                                        <span class="price">₦85,000</span>
                                    </div>
                                </div>
                                <div class="col-md-1">
                                    <div class="cart-item-remove">
                                        <button class="btn-remove">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Item 2 -->
                        <div class="cart-item">
                            <div class="row align-items-center">
                                <div class="col-md-2">
                                    <div class="cart-item-image">
                                        <img src="/images/decor/vase-1.jpg" alt="Stone Vase" class="img-fluid">
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="cart-item-details">
                                        <h3 class="cart-item-title">Stone Vase</h3>
                                        <p class="cart-item-collection">Ceramic Vessels Collection</p>
                                        <div class="cart-item-options">
                                            <span>Height: 25cm</span>
                                            <span>Material: Ceramic</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="cart-item-quantity">
                                        <div class="quantity-control">
                                            <button class="quantity-btn" data-action="decrease">-</button>
                                            <input type="number" class="quantity-input" value="2" min="1" max="10">
                                            <button class="quantity-btn" data-action="increase">+</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="cart-item-price">
                                        <span class="price">₦37,000</span>
                                    </div>
                                </div>
                                <div class="col-md-1">
                                    <div class="cart-item-remove">
                                        <button class="btn-remove">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Item 3 -->
                        <div class="cart-item">
                            <div class="row align-items-center">
                                <div class="col-md-2">
                                    <div class="cart-item-image">
                                        <img src="/images/decor/candle-1.jpg" alt="Sandalwood & Amber Candle" class="img-fluid">
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="cart-item-details">
                                        <h3 class="cart-item-title">Sandalwood & Amber Candle</h3>
                                        <p class="cart-item-collection">Scented Candles</p>
                                        <div class="cart-item-options">
                                            <span>Burn Time: 60 hours</span>
                                            <span>Scent: Warm, Woody</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="cart-item-quantity">
                                        <div class="quantity-control">
                                            <button class="quantity-btn" data-action="decrease">-</button>
                                            <input type="number" class="quantity-input" value="1" min="1" max="10">
                                            <button class="quantity-btn" data-action="increase">+</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="cart-item-price">
                                        <span class="price">₦15,000</span>
                                    </div>
                                </div>
                                <div class="col-md-1">
                                    <div class="cart-item-remove">
                                        <button class="btn-remove">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Cart Actions -->
                    <div class="cart-actions mt-5">
                        <div class="row">
                            <div class="col-md-6">
                                <a href="/bedding" class="btn btn-outline-dark">
                                    <i class="fas fa-arrow-left me-2"></i>Continue Shopping
                                </a>
                            </div>
                            <div class="col-md-6 text-md-end">
                                <button class="btn btn-outline-dark" id="updateCart">
                                    Update Cart
                                </button>
                                <button class="btn btn-outline-dark ms-2" id="clearCart">
                                    Clear Cart
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Promo Code -->
                    <div class="promo-code mt-5">
                        <h4 class="mb-3">Promo Code</h4>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Enter promo code">
                                    <button class="btn btn-outline-dark" type="button">Apply</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Order Summary -->
                <div class="col-lg-4">
                    <div class="order-summary">
                        <h3 class="summary-title">Order Summary</h3>
                        
                        <div class="summary-items">
                            <div class="summary-item">
                                <span>Subtotal</span>
                                <span>₦137,000</span>
                            </div>
                            <div class="summary-item">
                                <span>Shipping</span>
                                <span>₦5,000</span>
                            </div>
                            <div class="summary-item">
                                <span>Promo Code</span>
                                <span class="text-success">-₦10,000</span>
                            </div>
                            <div class="summary-divider"></div>
                            <div class="summary-total">
                                <span>Total</span>
                                <span class="total-amount">₦132,000</span>
                            </div>
                        </div>
                        
                        <div class="summary-note">
                            <p><i class="fas fa-info-circle me-2"></i>Shipping calculated at checkout</p>
                            <p><i class="fas fa-undo me-2"></i>30-day return policy</p>
                            <p><i class="fas fa-shield-alt me-2"></i>Secure checkout</p>
                        </div>
                        
                        <a href="/checkout" class="btn btn-dark btn-lg w-100 mt-4">Proceed to Checkout</a>
                        
                        <div class="payment-methods mt-4">
                            <p class="text-center mb-2">We accept</p>
                            <div class="d-flex justify-content-center gap-3">
                                <i class="fab fa-cc-visa payment-icon"></i>
                                <i class="fab fa-cc-mastercard payment-icon"></i>
                                <i class="fab fa-cc-amex payment-icon"></i>
                                <i class="fab fa-cc-paypal payment-icon"></i>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Customer Support -->
                    <div class="customer-support mt-5">
                        <h4 class="mb-3">Need Help?</h4>
                        <div class="support-contact">
                            <p class="mb-2">
                                <i class="fas fa-phone me-2"></i>
                                <a href="tel:+2347047511911">+234 704 751 1911</a>
                            </p>
                            <p class="mb-2">
                                <i class="fas fa-envelope me-2"></i>
                                <a href="mailto:support@uzyhomes.com">support@uzyhomes.com</a>
                            </p>
                            <p class="mb-0">
                                <i class="fas fa-clock me-2"></i>
                                Mon-Fri 9am-6pm, Sat 10am-4pm
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Recommended Products -->
    <section class="section-py bg-light">
        <div class="container">
            <div class="row mb-5">
                <div class="col-12">
                    <h3 class="section-title">You Might Also Like</h3>
                </div>
            </div>
            
            <div class="row g-4">
                <div class="col-md-3">
                    <div class="recommended-product">
                        <div class="recommended-image">
                            <img src="/images/products/cloud-duvet.jpg" alt="Cloud Duvet Cover" class="img-fluid">
                        </div>
                        <div class="recommended-info">
                            <h4>Cloud Duvet Cover</h4>
                            <p class="recommended-price">₦62,000</p>
                            <button class="btn-add-to-cart" data-id="2">
                                <i class="fas fa-plus me-2"></i>Add to Cart
                            </button>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-3">
                    <div class="recommended-product">
                        <div class="recommended-image">
                            <img src="/images/decor/vase-2.jpg" alt="Clay Urn" class="img-fluid">
                        </div>
                        <div class="recommended-info">
                            <h4>Clay Urn</h4>
                            <p class="recommended-price">₦22,000</p>
                            <button class="btn-add-to-cart" data-id="102">
                                <i class="fas fa-plus me-2"></i>Add to Cart
                            </button>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-3">
                    <div class="recommended-product">
                        <div class="recommended-image">
                            <img src="/images/decor/candle-2.jpg" alt="Linen & Lavender Candle" class="img-fluid">
                        </div>
                        <div class="recommended-info">
                            <h4>Linen & Lavender Candle</h4>
                            <p class="recommended-price">₦15,000</p>
                            <button class="btn-add-to-cart" data-id="202">
                                <i class="fas fa-plus me-2"></i>Add to Cart
                            </button>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-3">
                    <div class="recommended-product">
                        <div class="recommended-image">
                            <img src="/images/products/earth-sheet-set.jpg" alt="Earth Sheet Set" class="img-fluid">
                        </div>
                        <div class="recommended-info">
                            <h4>Earth Sheet Set</h4>
                            <p class="recommended-price">₦45,000</p>
                            <button class="btn-add-to-cart" data-id="4">
                                <i class="fas fa-plus me-2"></i>Add to Cart
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JS -->
    <script src="/js/cart.js"></script>
</body>
</html>