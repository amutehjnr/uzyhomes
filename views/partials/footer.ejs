    <script>
document.addEventListener('DOMContentLoaded', function() {
    const widget = document.querySelector('.floating-social-widget');
    const toggle = document.querySelector('.social-widget-toggle');
    
    // Toggle widget on click
    toggle.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        widget.classList.toggle('active');
    });
    
    // Close widget when clicking outside
    document.addEventListener('click', function(e) {
        if (!widget.contains(e.target)) {
            widget.classList.remove('active');
        }
    });
    
    // Close widget on escape key
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            widget.classList.remove('active');
        }
    });
    
    // Optional: Add hover functionality for desktop only
    if (window.innerWidth > 768) {
        let hoverTimer;
        
        widget.addEventListener('mouseenter', function() {
            clearTimeout(hoverTimer);
            widget.classList.add('active');
        });
        
        widget.addEventListener('mouseleave', function() {
            hoverTimer = setTimeout(() => {
                widget.classList.remove('active');
            }, 300);
        });
    }
});
</script>